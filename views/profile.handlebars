<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a List:</h3>

    <form class="form new-list-form">
      <div class="form-group">
        <label for="list-name">list name:</label>
        <input class="form-input" type="text" id="list-name" name="list-name" />
      </div>
      <div class="form-group">
        <label for="list-desc">description:</label>
        <textarea class="form-input" id="list-desc" name="list-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

 <div class="col-md-6 list-list">
  {{#if lists.length}}
 
    <h3>Current lists:</h3>

    {{#each lists as |list|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/list/{{list.id}}">{{list.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{list.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
    
  {{/if}}
  </div>
</div>

<script src="./js/list.js"></script>
